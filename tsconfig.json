{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "outDir": "./dist",
        "rootDir": ".",
        "declaration": true,
        "resolveJsonModule": true
    },
    "include": [
        "api/**/*"
    ],
    "exclude": [
        "node_modules",
        "frontend",
        "backend"
    ]
}